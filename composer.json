{
	"name": "bertptrs/marty",
	"description": "Smarty view renderer for the Mako framework",
	"keywords": [
		"mako",
		"smarty",
		"template"
	],
	"homepage": "http://bertptrs.nl/marty/",
	"license": "MIT",
	"authors": [
		{
			"name": "Bert Peters",
			"email": "bert@bertptrs.nl"
		}
	],
	"require": {
		"php": "^7.2 || ^8.0",
		"smarty/smarty": "^3 || ^4",
		"mako/framework": "^6.0 || ^7.0 || ^8.0"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^3",
		"phpunit/phpunit": "^8.0 || ^9.0",
		"phpro/grumphp": "^0.19 || ^1",
		"php-parallel-lint/php-parallel-lint": "^1.2"
	},
	"autoload": {
		"psr-4": {
			"marty\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"marty\\tests\\": "tests"
		}
	},
	"suggest": {
		"phpunit/phpunit": "Test whether templates actually compile in your unit tests."
	},
	"config": {
		"allow-plugins": {
			"phpro/grumphp": true
		}
	}
}
